<h3><strong><%= @user.first_name.capitalize %>'s Profile</strong></h3>
  <hr>
<p>Username: <%= @user.username %></p>
<p>First Name: <%= @user.first_name %></p>
<p>Last Name: <%= @user.last_name %></p>
<p>Email: <%= @user.email %></p>
<p>About Me: <br><%= @user.about_me %></p>

<hr>
<h4><%= @user.first_name.capitalize %>'s Posts</h4>
<% @user.posts.each do |post| %>
  <a href="/posts/<%= post.id %>"><h5><%= post.title %></h5></a>
  <p><%= post.content %></p>
  <p>Created at: <%= post.created_at %></p>
  <hr>
<% end %>


<hr>
<h4><%= @user.first_name.capitalize %>'s Comments</h4>
<% @user.comments.each do |comment| %>
  <a href="/posts/<%= comment.post.id %>"><h5><%= comment.post.title %></h5></a>
  <p><%= comment.content %></p>
  <p>Created at: <%= comment.created_at %></p>
  <hr>
<% end %>