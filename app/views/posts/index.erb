<% @posts.each do |post| %>
  <a href="/posts/<%= post.id %>"><h5><%= post.title %></h5></a>
  <p><%= post.content %></p>
  <p>Posted by: <%= post.user.username %></p>
  <p>Created at: <%= post.created_at %></p>
  <p>Votes: <%= post.post_votes.length %></p>

<% if !(post.post_votes.find_by(user_id: session[:user_id])) && (session[:user_id] != nil) %>
  <form action="/votes/posts" method="post">
    <input type="hidden" name="post_id" value= <%= post.id%> >
    <button class="btn btn-default" value="submit">Vote</button>
  </form>
<% end %>
  <hr>
<% end %>